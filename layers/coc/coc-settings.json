{
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", ".root", "Makefile", "CMakeLists.txt"],
  "coc.source.omni.filetypes": ["verilog_systemverilog"],
  "suggest.triggerCompletionWait": 50,
  "suggest.noselect": true,
  "suggest.enablePreselect": false,
  "suggest.floatConfig": {
    "border": true,
    "borderhighlight": "PreProc",
  },
  "suggest.pumFloatConfig": {
    "border": false,
  },
  "hover.floatConfig": {
    "border": true,
  },
  "snippets.extends": {
    "cpp": ["c"],
    "cuda": ["cpp"],
  },
  "semanticTokens.filetypes": ["*"],
  "languageserver": {
    "svls": {
      "command": "svls",
      "filetypes": ["verilog_systemverilog"],
    }
  }
}
