{
  "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json", ".root", "Makefile", "CMakeLists.txt"],
  "coc.source.omni.filetypes": ["verilog_systemverilog"],
  "diagnostic.enable": false,
  "snippets.extends": {
    "cpp": ["c"],
    "cuda": ["cpp"],
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp", "cuda"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git", ".hg", ".root"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-cache"
        }
      }
    }
  }
}
